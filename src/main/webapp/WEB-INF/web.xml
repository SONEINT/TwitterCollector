<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Twitter data acquisition Web Application</display-name>

	<listener>
    	<listener-class>edu.isi.twitter.WebappStartupManager</listener-class>
	</listener>

	<servlet>
		<servlet-name>FollowTwitsServlet</servlet-name>
		<servlet-class>com.fetch.twitter.FollowTwitsServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>FollowTwitsServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>
